<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_enabled="false">
            <shape android:shape="rectangle" >
                <gradient
                    android:startColor="#a3a3a3"
                    android:endColor="#878787"
                    android:angle="270" />
                <stroke
                    android:width="1dp"
                    android:color="#878787" />
                <corners
                    android:radius="6dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
                <size
                    android:width="75dp"
                    android:height="75dp" />
            </shape>
        </item>
        <item android:state_pressed="true">
            <shape>
                <solid
                    android:color="#1215ef" />
                <stroke
                    android:width="1dp"
                    android:color="#010499" />
                <corners
                    android:radius="6dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
                <size
                    android:width="75dp"
                    android:height="75dp" />

            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:startColor="#1215ef"
                    android:endColor="#0b0c93"
                    android:angle="270" />
                <stroke
                    android:width="1dp"
                    android:color="#010499" />
                <corners
                    android:radius="6dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
                <size
                    android:width="75dp"
                    android:height="75dp" />
            </shape>
        </item>

</selector>